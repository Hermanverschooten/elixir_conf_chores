#!/bin/sh

# Flush all connections in the firewall
iptables -F
# Delete all chains in iptables
iptables -X


# Removing eth0 interface for demo
# iptables -A POSTROUTING -t nat -o eth0 -j MASQUERADE
iptables -A POSTROUTING -t nat -j MASQUERADE

iptables -t mangle -N internet
iptables -t mangle -A PREROUTING -i wlan0 -p tcp -m tcp -j internet
iptables -t mangle -A internet -j MARK --set-mark 99

iptables -t nat -A PREROUTING -i wlan0 -p tcp -m mark --mark 99 -m tcp --dport 80 -j DNAT --to-destination 192.168.24.1:8081
iptables -t nat -A PREROUTING -i wlan0 -p tcp -m mark --mark 99 -m tcp --dport 443 -j DNAT --to-destination 192.168.24.1:8081

# iptables -t nat -A PREROUTING -i wlan0 -p tcp -m mark --mark 88 -m tcp --dport 80 -j DNAT --to-destination 192.168.24.1:8081
# iptables -t nat -A PREROUTING -i wlan0 -p tcp -m mark --mark 88 -m tcp --dport 443 -j DNAT --to-destination 192.168.24.1:8081

# iptables -t mangle -A PREROUTING -p tcp -m mark --mark 99 -m tcp --dport 80 -j DNAT --to-destination 192.168.24.1
# iptables -t mangle -A PREROUTING -p tcp -m mark --mark 99 -m tcp --dport 443 -j DNAT --to-destination 192.168.24.1
#
# iptables -t mangle -A PREROUTING -p tcp -m mark --mark 88 -m tcp --dport 80 -j DNAT --to-destination 192.168.24.1:8081
# iptables -t mangle -A PREROUTING -p tcp -m mark --mark 88 -m tcp --dport 443 -j DNAT --to-destination 192.168.24.1:8081

#save our iptables
iptables-save > /root/rules.v4
